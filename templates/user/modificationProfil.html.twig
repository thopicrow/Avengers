{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Modifier le profil{% endblock %}

{% block body %}
    <h1>Profil</h1>
    <p>{{ error }}</p>

    {{ form_start(profilForm) }}
    {{  form_row(profilForm.username) }}
    {{  form_row(profilForm.email) }}
    {{  form_row(profilForm.nom) }}
    {{  form_row(profilForm.prenom) }}
    {{  form_row(profilForm.telephone) }}
    {{  form_row(profilForm.passwordPlain) }}

    <div>
        <a id="lien" href="#" onclick="javascript:show('show', 'lien'); return false;">Modifier votre mot de passe ?</a>
        <div id="show" style="display: none" class="input-field col s12">
            {{ form_row(profilForm.newPassword) }}
        </div>
    </div>
    <button type="submit" class="btn">Modifier</button>
    {{  form_end(profilForm) }}
{% endblock %}